{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "bin:cur_dir->a.out",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++20",
        "${fileDirname}/*.cpp",
        "${workspaceFolder}/lib/*.cpp",
        "-I${workspaceFolder}/lib",
        "-lcrypt",
        "-o",
        "${workspaceFolder}/a.out",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Creates executable from current folder + lib folder."
    },
    {
      "type": "cppbuild",
      "label": "bin:cur_dir->cur_filename",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++20",
        "${fileDirname}/*.cpp",
        "${workspaceFolder}/lib/*.cpp",
        "-I${workspaceFolder}/lib",
        "-lcrypt",
        "-o",
        "${workspaceFolder}/${fileBasenameNoExtension}",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Creates executable from current folder + lib folder."
    },
    {
      "type": "shell",
      "label": "create out dir",
      "command": "mkdir",
      "args": ["-p", "out/lib", "out/app"]
    },
    {
      "type": "cppbuild",
      "label": "obj:cur_dir->out/app/*.o",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-c",
        "-std=c++20",
        "${fileDirname}/*.cpp",
        "-I${workspaceFolder}/lib",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion"
      ],
      "options": {
        "cwd": "${workspaceFolder}/out/app"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Creates object files from current folder.",
      "dependsOn": ["create out dir"],
      "dependsOrder": "sequence"
    },
    {
      "type": "cppbuild",
      "label": "obj:lib->out/lib/*.o",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-c",
        "-std=c++20",
        "${workspaceFolder}/lib/*.cpp",
        "-I${workspaceFolder}/lib",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion"
      ],
      "options": {
        "cwd": "${workspaceFolder}/out/lib"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Creates object files from lib folder.",
      "dependsOn": ["create out dir"],
      "dependsOrder": "sequence"
    },
    {
      "type": "cppbuild",
      "label": "bin:out/**/*.o->a.out",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++20",
        "${workspaceFolder}/out/lib/*.o",
        "${workspaceFolder}/out/app/*.o",
        "-lcrypt",
        "-o",
        "${workspaceFolder}/a.out",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Creates executable from out folder."
    }
  ],
  "version": "2.0.0"
}
