{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build dir for debug",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++20",
        "${fileDirname}/*.cpp",
        "${workspaceFolder}/lib/*.cpp",
        "-I${workspaceFolder}/lib",
        "-o",
        "${workspaceFolder}/a.out",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "build dir",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++20",
        "${fileDirname}/*.cpp",
        "${workspaceFolder}/lib/*.cpp",
        "-I${workspaceFolder}/lib",
        "-o",
        "${workspaceFolder}/${fileBasenameNoExtension}",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
